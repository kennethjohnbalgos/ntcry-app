%h1 Listing email_addresses

%table
  %tr
    %th Contact
    %th Email
    %th Provider
    %th Status
    %th Primary
    %th
    %th
    %th

  - @email_addresses.each do |email_address|
    %tr
      %td= email_address.contact_id
      %td= email_address.email
      %td= email_address.provider
      %td= email_address.status
      %td= email_address.primary
      %td= link_to 'Show', email_address
      %td= link_to 'Edit', edit_email_address_path(email_address)
