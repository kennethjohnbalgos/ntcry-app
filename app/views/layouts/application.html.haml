!!!
%html
  %head
    %title Dashboard | Noticery
    %link{:href => "/noticery_favicon.png", :rel => "shortcut icon"}
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body#dashboard
    %div.dimmer
    %div.modal_space
      %div.modal
        %div.close
          = link_to_function image_tag('close.png'), "hide_modal()"
        %div.html
          = ":)"
    %div.sidebar
      = render :partial => 'dashboard/sidebar'
    %div.main
      = yield
    