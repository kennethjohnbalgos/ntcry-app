%div.title Noticery
%div.session
  %div.head= "Login"
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    %table.form-login
      %tr
        %td.label
          = f.label :email, "Email Address"
        %td.field
          = f.email_field :email
      %tr
        %td.label
          = f.label :password, "Password"
        %td.field
          = f.password_field :password
      - if devise_mapping.rememberable?
        %tr
          %td.label
            = ""
          %td.field
            = f.check_box :remember_me
            = f.label :remember_me, "Keep me logged in"
      %tr
        %td.submit{:colspan => 2}
          = f.submit "Login"
  %div.links
    = render "links"